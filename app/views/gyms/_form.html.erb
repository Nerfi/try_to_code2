<div class="container">
  <div class="row">
  <div class="col-sm-4 col-sm-offset-4">
     <%= simple_form_for(@gym) do |f| %>

     <%= f.error_notification %>
     <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input  :description %>
    <%= f.input :address %>
    <%= f.input :pricing %>
  </div>

  <div class="form-actions">
    <!-- revisar este codigo en un futuro porque puedo poner solo un button -->
    <% if policy(Gym).create? %>

    <%= f.button :submit %>

    <% end %>

  </div>
<% end %>

  </div>
  </div>
</div>

